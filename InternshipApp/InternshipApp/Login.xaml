<Window x:Class="InternshipApp.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InternshipApp"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="300" Background="Bisque">
    <Grid>
        <TextBlock Text="Logon Please!" FontSize="18" Margin="100,50,0,0" ></TextBlock>
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="38,118,0,0" Name="textBlock1" Text="Username" VerticalAlignment="Top" Width="67" />

        <TextBlock Height="23" HorizontalAlignment="Left" Margin="38,168,0,0" Name="textBlock2" Text="Password" VerticalAlignment="Top" Width="77" />

        <TextBox Height="23" HorizontalAlignment="Left" Margin="98,115,0,0" Name="LoginUsername" VerticalAlignment="Top" Width="150" />

        <PasswordBox Height="23" HorizontalAlignment="Left" Margin="98,168,0,0" x:Name="LoginPassword" VerticalAlignment="Top" Width="150" />

        <Button Content="Login" Height="23" HorizontalAlignment="Left" Margin="118,211,0,0" Name="login_btn" VerticalAlignment="Top" Width="104" Click="login_btn_Click"/>
       
    </Grid>
    
</Window>
